<%= content_for :title, 'Food items' %>

<h1>Food List</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Measurement_unit</th>
      <th>Unit_price</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td><%= food.price %></td>
        <td>
          <%= link_to 'Delete', food_path(food), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add New Food', new_food_path %>

