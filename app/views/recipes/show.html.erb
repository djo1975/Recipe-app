<%= content_for :title, @recipe.name %>

<main class='main'>
  <div class='header'>
    <h1><%= @recipe.name %></h1>

    <%= form_for @recipe, url: recipe_path(@recipe), method: :put do |f| %>
      <div class='actions toggle-link'>
        <% if @recipe.public? %>
          <%= f.hidden_field :public, value: false %>
          <%= button_tag type: 'submit', class: 'toggle-submit' do %>
            <span>Public</span>
            <div class='toggle-box public'>
              <div class='toggle'></div>
            </div>
          <% end %>
        <% else %>
          <%= f.hidden_field :public, value: true %>
          <%= button_tag type: 'submit', class: 'toggle-submit' do %>
            <span>Private</span>
            <div class='toggle-box private'>
              <div class='toggle'></div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class='content'>
    <p class='prep-time'>Preparation time: <%= @recipe.prep_time %></p>
    <p class='cook-time'>Cooking time: <%= @recipe.cook_time %></p>
    <p class='description'><%= @recipe.description %></p>
  </div>

  <div class='actions'>
    <%= link_to 'Generate shopping list' %>
    <%= link_to 'Add ingredient' %>
  </div>

  <% if @recipe_foods.length > 0 %>
    <table class='foods'>
      <thead>
        <tr>
          <th>Food</th>
          <th>Quantity</th>
          <th>Value</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @recipe_foods.each do |recipe_food| %>
          <tr>
            <td><%= recipe_food.food.name %></td>
            <td><%= recipe_food.food.quantity %> <%= recipe_food.food.measurement_unit %></td>
            <td>$<%= recipe_food.food.quantity * recipe_food.food.price %></td>
            <td>
              <%= link_to 'Edit' %>
              <%= link_to 'Delete' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</main>