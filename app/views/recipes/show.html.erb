<style>
.main {
  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.header h1 {
  margin: 0;
}

.actions {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
    gap: 15rem;
    padding: 2rem;
}

.toggle-submit {
  background: none;
  border: none;
  cursor: pointer;
  margin-left: 10px;
  display: flex;
  align-items: center;
}

.toggle-submit span {
  margin-right: 5px;
}

.toggle-box {
  width: 40px;
  height: 20px;
  background-color: #ccc;
  border-radius: 10px;
  position: relative;
}

.toggle-box .toggle {
  width: 20px;
  height: 20px;
  background-color: #fff;
  border-radius: 50%;
  position: absolute;
  top: 0;
  left: 0;
  transition: transform 0.3s ease-in-out;
}

.toggle-box.public .toggle {
  transform: translateX(20px);
}

.content {
  margin-bottom: 20px;
}

.description {
  margin-top: 10px;
}

.actions a {
  display: inline-block;
  margin-right: 10px;
  text-decoration: none;
  color: #333;
  padding: 5px 10px;
  background-color: #eee;
  border-radius: 5px;
}

.foods {
  width: 100%;
  border-collapse: collapse;
}

.foods th,
.foods td {
  padding: 10px;
  text-align: left;
  border-bottom: 1px solid #ccc;
}

.foods th:last-child,
.foods td:last-child {
  text-align: center;
}

.actions a:hover {
  background-color: #ddd;
}
</style>
<%= content_for :title, @recipe.name || 'Recipe' %>

<main class='main'>
  <div class='header'>
    <h1><%= @recipe.name %></h1>

    <%= form_for @recipe, url: recipe_path(@recipe), method: :put do |f| %>
      <div class='actions toggle-link'>
        <% if @recipe.public? %>
          <%= f.hidden_field :public, value: false %>
          <%= button_tag type: 'submit', class: 'toggle-submit' do %>
            <span>Public</span>
            <div class='toggle-box public'>
              <div class='toggle'></div>
            </div>
          <% end %>
        <% else %>
          <%= f.hidden_field :public, value: true %>
          <%= button_tag type: 'submit', class: 'toggle-submit' do %>
            <span>Private</span>
            <div class='toggle-box private'>
              <div class='toggle'></div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class='content'>
    <p class='prep-time'>Preparation time: <%= @recipe.prep_time %></p>
    <p class='cook-time'>Cooking time: <%= @recipe.cook_time %></p>
    <p class='description'><%= @recipe.description %></p>
  </div>

  <div class='actions'>
    <%= link_to 'Generate shopping list'%>
    <%= link_to 'Add ingredient', new_recipe_recipe_food_path(@recipe) %>
  </div>

  <% if @recipe.recipe_foods.length > 0 %>
    <table class='foods'>
      <thead>
        <tr>
          <th>Food</th>
          <th>Quantity</th>
          <th>Value</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @recipe.recipe_foods.each do |recipe_food| %>
          <tr>
            <td><%= recipe_food.food.name %></td>
            <td><%= recipe_food.quantity %> <%= recipe_food.food.measurement_unit %></td>
            <td>$<%= recipe_food.quantity * recipe_food.food.price %></td>
            <td>
              <%= link_to 'Modify', edit_recipe_recipe_food_path(@recipe, recipe_food) %>
              <%= button_to 'Delete', recipe_recipe_food_path(@recipe, recipe_food), method: :delete %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</main>
